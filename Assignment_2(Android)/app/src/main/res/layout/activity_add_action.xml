<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Select Team -->
    <TextView
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="Select Team" />

    <Spinner
        android:id="@+id/spinnerTeam"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:hint="Player TeamBelong"/>

    <!-- Select Player -->
    <TextView
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="Select Player"
        />

    <Spinner
        android:id="@+id/spinnerPlayer"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:hint="Player Name"/>

    <!-- Quarter Calculation -->

    <TextView
        android:id="@+id/currentQuarterText"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Quarter: "
        android:textSize="18sp"
        android:textStyle="bold" />
    <!-- Select Action -->
    <TextView
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="Select Action:" />
    <!-- Action Buttons -->
    <Button
        android:id="@+id/btnAction1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kick Goal Scored (6 Points)" />

    <Button
        android:id="@+id/btnAction2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kick Behind Scored (1 Point)" />

    <Button
        android:id="@+id/btnAction3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kick No Score(0 Points)" />

    <Button
        android:id="@+id/btnAction4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handball Behind Score (1 Point)" />

    <Button
        android:id="@+id/btnAction5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark (catching the ball)" />

    <Button
        android:id="@+id/btnAction6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tackle" />
    <Button
        android:id="@+id/Close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close" />

</LinearLayout>